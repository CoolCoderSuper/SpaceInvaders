<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
        x:Class="SpaceInvaders.Avalonia.GameWindow"
        Title="SpaceInvaders"
		WindowState="Maximized"
		Width="700" Height="500"
        Loaded="MainWindow_Loaded" Closing="Window_Closing" SizeChanged="MainWindow_SizeChanged" KeyDown="MainWindow_KeyDown" KeyUp="MainWindow_KeyUp">
    <Grid RowDefinitions="*,Auto">
		<Canvas Name="GameBoard" Grid.ColumnSpan="1"/>
	    <DockPanel Grid.Row="1">
			<TextBlock DockPanel.Dock="Left" Name="Score"/>
			<TextBlock DockPanel.Dock="Right" Name="Bullets" HorizontalAlignment="Right"/>
	    </DockPanel>
    </Grid>
</Window>